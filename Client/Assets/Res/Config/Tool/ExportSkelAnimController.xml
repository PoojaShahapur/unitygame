<?xml version='1.0' encoding='utf-8' ?>
<!--  
一个 fbx 文件中可能有多个 AnimationClip ，一个 *.anim 中只会有一个 AnimationClip
-->
<Root>
	<Controller inpath="Assets/Res/Animation/Scene" outpath="Assets/Prefabs/Resources/Animation/Scene" outname="SelfCardAni" outextname="asset" >
		<Params>
			<Param name="StateId" type="int" />
		</Params>
		<Layers>
			<Layer>
				<Statemachine>
					<Clip name="choupairushou.anim" >
						<State motion="choupairushou" actid="1" >
							<AnyCondition name="StateId" value="1" OpMode="Equals" />
						</State>
					</Clip>
					<Transition srcstate="choupairushou" deststate="choupairushou" >
						<Condition name="StateId" value="1" OpMode="Equals" />
					</Transition>
				</Statemachine>
			</Layer>
		</Layers>
	</Controller>
</Root>