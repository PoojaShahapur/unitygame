				<Item ID="30003" Name="小螃蟹" NeedID="666" NeedNum="15" Hot="热销中" Only="新年快乐"/>
				<Item ID="30004" Name="小龙虾" NeedID="888" NeedNum="30" Hot="" Only=""/>
