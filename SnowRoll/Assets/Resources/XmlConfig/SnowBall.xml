<?xml version="1.0" encoding="utf-8"?>
<!-- 雪球配置 -->
<Config>
    <SnowBallBasic>
		<!-- 雪球基本配置 MassFactor: 客户端显示质量倍数 M = r ^ k    RealMassFactor:游戏中的实际质量倍数 M = r ^ k, BallCollideRadius: 初始的球的碰撞半径，SnowBlockCollideRadius: 初始的雪块的碰撞半径， ShitCollideRadius: 初始的吐出雪块的碰撞半径 -->
		<Init MassFactor="2" RealMassFactor="2" BallCollideRadius="1.08" SnowBlockCollideRadius="0.002" ShitCollideRadius="1" />
		<!-- 雪球分裂配置， K,N: AC=K*AB+N, CanSplitFactor: 可以分裂的雪块的质量, Max: 最大的雪球数量, RelStartPos: 分裂开始的时候，距离多远开始， RelDist: 分裂需要运动的距离-->
		<Split K="2" N="20" CanSplitMass="3.2" Max="16" RelStartPos="0" RelDist="27" />
		<!-- 雪球融合配置， MergeContactTime: 在一起的秒数，才能融合, Inter: 融合冷却时间, Range: 在这个范围内说明一直在融合, SpeedFactor: 融合时，速度变化因子-->
		<Merge ContactTime="1" CoolTime="15" Range="1" SpeedFactor="1.3" />
		<!-- 雪球吞吐配置, SnowMass:吐出积雪的质量, CanEmitSnowMass: 雪球质量达到 CanEmitSnowMass 才可以吐积雪, S\A\L: 在 S 秒内，球受力角度小于 a 或者不受力，雪球移动距离小于 L   Interval：长按吐雪块时间间隔-->
		<Emit SnowMass="1.4" CanEmitSnowMass="3.2"  RelStartPos="0" RelDist="27" S="1" A="1" L="1" Interval="0.18"/>
		<!-- 吞噬 , AttackFactor: 可以吞噬的因子, A: 吞食雪块半径计算中公式中的指数 -->
		<Attack Factor="1.2" A="2" />
		<!-- 速度系数 (v = k / r + b) r为半径, SlowMoveSpeed：停止时缓慢移动至中心点的速度-->
		<MoveSpeed MoveSpeed_k="15.0" MoveSpeed_b="15.0" SlowMoveSpeed="5.0"/>
    </SnowBallBasic>
	
	<!-- 地图配置 -->
	<Map Width="835" Height="835" />
	
	<!-- Ball 纹理配置 -->
	<BallSelfTex Src="World/Model/PlayerTestblue.prefab,World/Model/PlayerTestgold.prefab,World/Model/PlayerTestgreen.prefab,World/Model/PlayerTestred.prefab" />
	<BallOtherTex Src="World/Model/PlayerOtherTestblue.prefab,World/Model/PlayerOtherTestgold.prefab,World/Model/PlayerOtherTestgreen.prefab,World/Model/PlayerOtherTestred.prefab" />
	<!-- SnowBlock 纹理配置 -->
	<SnowBlockTex Src="World/Model/SnowBlockTestblue.prefab,World/Model/SnowBlockTestgold.prefab,World/Model/SnowBlockTestgreen.prefab,World/Model/SnowBlockTestred.prefab" />

	<CameraBasic>
		<!--相机控制参数 z：相机水平距离 y：相机垂直距离  注意参数为0的错误-->
		<!--初始时：z=dis_z + factor_z * pow(r, 0.5) + r    超过临界半径后：z = dis_z + factor_z * pow(lim_r, 0.5) + (r - lim_r) + r-->
		<!--y=dis_y * r * factor_y-->
		<CameraControl CameraDistance_Z="10.0" CameraChangeFactor_Z="6.0" LimitRadius="50.0" CameraDistance_Y="0.5" CameraChangeFactor_Y="0.05" />	
    </CameraBasic>
	
	<ShopBasic>
		<!--商店配置-->
		<!--商店类型: 1.皮肤->SkinShop 2.圣衣->GodShop 3.……-->
		<!--物品类型: 1.外形->Shape 2.鱼仔->Child 3.……-->
		<!--ID：物品唯一ID，同类物品包含一个区间[a,b]-->
		<!--Name：物品名-->
		<!--NeedID：兑换所需道具ID-->
		<!--NeedNum：兑换所需道具数量-->
		<!--Hot：热销等标识，无标识配为：Hot=""-->
		<!--Only：专属广告标识，无标识配为：Only=""-->
		<SkinShop>
